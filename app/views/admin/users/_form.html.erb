<%= simple_form_for [:admin, user], remote: true, data: { reflex: "submit->User#create" } do |f| %>
  <%= f.input :name %>
  <%= f.input :email %>
  <div class="relative block w-full">
    <%= f.input :role, collection: AccountUser.roles.keys, label_method: :capitalize, selected: 'agent' %>
    <div class="absolute inset-y-0 right-0 flex items-center px-2 text-gray-700 pointer-events-none top-5">
      <svg class="w-4 h-4 fill-current" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20"><path d="M9.293 12.95l.707.707L15.657 8l-1.414-1.414L10 10.828 5.757 6.586 4.343 8z"/></svg>
    </div>
  </div>
  <%= f.button :submit, 'Invite User' %>
</div>
<% end %>
