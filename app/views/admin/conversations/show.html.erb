<div class="flex h-screen">

<div class="flex flex-col justify-between w-24 sidebar">
  <div class="p-5">
    <%= render "admin/shared/logo" %>
  </div>
  <div>
    <%= render "admin/shared/sidebar" %>
  </div>
  <div class="flex justify-center pb-5">
    <div class="w-12 h-12 overflow-hidden rounded-full">
      <img src="<%= current_user.avatar_url %>" alt="">
    </div>
  </div>
</div>

<div class="w-full p-6 overflow-hidden">
  <div class="flex h-full bg-white border border-gray-200 rounded-md">
    <div class="w-1/3 overflow-y-scroll border-r border-gray-200">
      <div class="flex items-center justify-between h-24 px-4 border-b border-gray-200">
        <div>
          <p class="text-sm">Queue: <span class="text-blue-400"><%= @conversations.size %> chats</span></p>
        </div>
        <div class="flex space-x-3 text-gray-500">
          <svg class="w-6 h-6" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15" />
          </svg>
          <svg class="w-6 h-6" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 12h.01M12 12h.01M19 12h.01M6 12a1 1 0 11-2 0 1 1 0 012 0zm7 0a1 1 0 11-2 0 1 1 0 012 0zm7 0a1 1 0 11-2 0 1 1 0 012 0z" />
          </svg>
        </div>
      </div>
      <%= render @conversations %>
    </div>
    <div class="w-2/3">
      <div class="flex flex-col w-full h-full">
        <div class="flex items-center justify-between px-4 py-6 border-b border-gray-200">
          <div>
            <div>
              <h4 class="text-base font-semibold"><%= @conversation.contact.name %></h4>
              <span class="text-sm"><%= @conversation.contact.email %></span>
            </div>
          </div>
          <div class="flex space-x-3 text-gray-500">
            <svg class="w-6 h-6" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 12h.01M12 12h.01M19 12h.01M6 12a1 1 0 11-2 0 1 1 0 012 0zm7 0a1 1 0 11-2 0 1 1 0 012 0zm7 0a1 1 0 11-2 0 1 1 0 012 0z" />
            </svg>
          </div>
        </div>
        <div class="flex-grow overflow-y-scroll">
          <div id="messages" class="flex flex-col p-6 space-y-4">
            <%= render @messages %>
          </div>
        </div>
        <div class="flex items-center justify-between h-48 px-5 space-x-2 border-t border-gray-200">
          <input type="text" class="flex-1 focus:outline-none" placeholder="Click here to reply message..." />
          <div>
            <button class="px-4 py-2 text-white bg-blue-600 rounded-md">Send</button>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

</div>
